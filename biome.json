{
  "$schema": "https://biomejs.dev/schemas/2.0.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "./composables/**/*.ts",
      "./tsconfig.json",
      "./server/**/*.{ts|vue}",
      "./components/**/*.{ts|vue}",
      "./pages/**/*.{ts|vue}"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
